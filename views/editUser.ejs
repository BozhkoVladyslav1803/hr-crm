<html lang="en">
<%- include("./partials/header.ejs")%> 

<body>
    <h1>Edit user</h1>
  <form action="/dashboard/edit_user" method="post" enctype="multipart/form-data">
    <div  class="container">
      <div class="profile">
        <div class="img"></div>
        <label for="first_name">first_name
        <input type="text" class="input" id="first_name" name="first_name" value="<%= first_name %>"></label><br><br>
        <label for="last_name">last_name
        <input type="text" class="input" id="last_name" name="last_name" value="<%= last_name %>"></label><br><br>
        <label for="email">login
        <input type="email" class="input" id="email" name="email" placeholder="email" value="<%= email%>"></label><br><br>
        <label for="password">password
        <input type="password" class="input" id="password" name="password" placeholder="password"></label><br><br>
        <label for="positions">position
        <select id="positions" name="positions" value="<%= positions %>"><br><br>
          <% positions.forEach(position => { %>
              <option value="<%= position %>"><%= position  %></option>
          <% }); %>
          </select></label><br><br>
        <label for="roles">role
        <select id="roles" name="roles" value="<%= roles %>"><br><br>
          <% roles.forEach(role => { %>
              <option value="<%= role %>"><%= role  %></option>
          <% }); %>
          </select></label><br><br>
        <label for="joined_date">joined date
        <input type="date" class="input" id="joined_date" name="joined_date" placeholder="joined date" value="<%= joined_date %>"></label><br><br>
        <label for="branch">branch
        <input type="text" class="input" id="branch" name="branch" placeholder="branch" value="<%= branch %>"></label><br><br>
        <h6>photo
        <input type="file" class="input" id="sampleFile" name="sampleFile" placeholder="sampleFile" value="<%= photo %>"></h6><br><br>
        <button class="btn btn-outline-success" type="submit">Edit</button>
        <% if(typeof error !== 'undefined'){%>
          <div class="err_msq"><%- error -%></div><%}%>
    </div>
</div>
<a href="/logout">logout</a>
</form>
        <div class="link">
            <a href="./vacation_req_list">login</a>
        </div>
      
  
<%- include("./partials/footer.ejs") %> 
</body>
</html>